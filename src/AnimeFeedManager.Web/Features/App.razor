@using AnimeFeedManager.Services.Shared
@using AnimeFeedManager.Web.Bootstrapping
@using AnimeFeedManager.Web.Htmx
@using Microsoft.Extensions.Options
@using Passwordless
@inject IOptions<PasswordlessOptions> PasswordlessOptions
@inject IOptions<SignalROptions> SignalROptions
@inject IHttpContextAccessor HttpContextAccessor

@if (_isHtmxRequest)
{
    <Routes/>
}
else
{
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content="Track and manage your anime season library. Browse current and upcoming anime seasons, manage subscriptions, and get notified about new releases."/>
    <meta name="theme-color" content="#1a1a2e"/>

    <!-- Open Graph -->
    <meta property="og:type" content="website"/>
    <meta property="og:title" content="Anime Feed Manager"/>
    <meta property="og:description" content="Track and manage your anime season library. Browse current and upcoming anime seasons, manage subscriptions, and get notified about new releases."/>
    <meta property="og:image" content="/images/og-image.png"/>

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary"/>
    <meta name="twitter:title" content="Anime Feed Manager"/>
    <meta name="twitter:description" content="Track and manage your anime season library. Browse current and upcoming anime seasons, manage subscriptions, and get notified about new releases."/>
    <meta name="twitter:image" content="/images/og-image.png"/>

    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" href="/apple-touch-icon.png"/>

    <base href="/"/>
    <script>
        (function() {
            const theme = localStorage.getItem('user-theme');
            if (theme && theme !== 'default') {
                document.documentElement.setAttribute('data-theme', theme);
            }
        })();
    </script>
    <link href="https://fonts.cdnfonts.com/css/prettier-script" rel="stylesheet">
    <link href="https://fonts.cdnfonts.com/css/sf-mono" rel="stylesheet">
    <link rel="stylesheet" href="@Assets["app.css"]"/>
    @* <link rel="stylesheet" href="@Assets["AnimeFeedManager.Web.styles.css"]"/> *@
    <ImportMap/>
    <link rel="icon" type="image/svg+xml" href="favicon.svg"/>
    <link rel="icon" type="image/png" href="favicon.png"/>

    <script>
        const PASSWORDLESS_API_URL = "https://v4.passwordless.dev"; // For self-hosting, change this. This is always the default value.
        const API_KEY = "@PasswordlessOptions.Value.ApiKey"; // Replace this value with your API Key
    </script>

    <RenderOnEnviroment Exclude="[Environments.Development]">
        <script defer src="@Assets["webcomponents/htmx-error-alert.min.js"]"></script>
        <script defer src="@Assets["lib/htmx/dist/htmx.min.js"]"></script>
        <script defer src="@Assets["scripts/form-submit-locker.min.js"]" type="text/javascript"></script>
        <script defer src="@Assets["scripts/invalid-cleaner.min.js"]" type="text/javascript"></script>
        <script defer src="@Assets["scripts/htmx-event-params.min.js"]" type="text/javascript"></script>
        <script defer src="@Assets["lib/alpinejs/dist/cdn.min.js"]"></script>
        <script defer
                src="@Assets["lib/passwordless-client/dist/umd/passwordless.umd.min.js"]"></script>
        <script defer src="@Assets["lib/signalr/dist/browser/signalr.min.js"]"></script>
        <script defer src="@Assets["lib/chartjs/dist/chart.umd.min.js"]"></script>
        <script defer src="@Assets["scripts/hx-signalr.min.js"]" type="module"></script>
    </RenderOnEnviroment>

    <RenderOnEnviroment Include="[Environments.Development]">
        <script defer src="@Assets["webcomponents/htmx-error-alert.min.js"]"></script>
        <script defer src="@Assets["lib/htmx/dist/htmx.js"]"></script>
        <script defer src="@Assets["scripts/form-submit-locker.js"]" type="text/javascript"></script>
        <script defer src="@Assets["scripts/invalid-cleaner.js"]" type="text/javascript"></script>
        <script defer src="@Assets["scripts/htmx-event-params.js"]" type="text/javascript"></script>
        <script defer src="@Assets["lib/alpinejs/dist/cdn.js"]"></script>
        <script defer src="@Assets["lib/passwordless-client/dist/umd/passwordless.umd.js"]"></script>
        <script defer src="@Assets["lib/signalr/dist/browser/signalr.js"]"></script>
        <script defer src="@Assets["lib/chartjs/dist/chart.umd.min.js"]"></script>
        <script defer src="@Assets["scripts/hx-signalr.js"]" type="module"></script>
    </RenderOnEnviroment>


    <HeadOutlet/>
    <title>Anime Feed Manager</title>
</head>

<body class="bg-base-200 min-h-screen min-w-[380px]"
      hx-boost="true"
      hx-target="#main-content"
      hx-select="#main-content"
      hx-ext="signalr"
      signalr-connect="@SignalROptions.Value.Endpoint"
>

<Routes/>

<div signalr-subscribe="@ServerNotifications.AlertNotifications"
     hx-target="#toast-panel"
     hx-swap="beforeend">
</div>


<daisy-htmx-alerts attach-to="#toast-panel"></daisy-htmx-alerts>
<HtmxConfirm></HtmxConfirm>
<div id="toast-panel" class="toast toast-center z-30 isolate" hx-preserve></div>
@* <script src="_framework/blazor.web.js"></script> *@
</body>

</html>
}

@code {
    private bool _isHtmxRequest;

    protected override void OnInitialized()
    {
        _isHtmxRequest = HttpContextAccessor.GetHtmxRequestType() is HxBoosted or HxForm;
    }
}