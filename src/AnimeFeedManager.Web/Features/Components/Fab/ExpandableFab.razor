@* ExpandableFab.razor *@

<div class="fab-container group/fab relative inline-block">
    @* Main FAB *@
    <button type="button"
            class="btn btn-circle btn-primary btn-sm shadow-lg relative z-20
                   transition-transform duration-200
                   group-hover/fab:rotate-45 group-focus-within/fab:rotate-45"
            aria-label="@(MainAriaLabel ?? "Open actions")">
        @if (MainIcon is not null)
        {
            @MainIcon
        }
        else
        {
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                 stroke-width="2" stroke="currentColor" class="w-6 h-6" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15"/>
            </svg>
        }
    </button>

    @* Actions (stack upward, centered under trigger; labels grow to the left) *@
    <div class="fab-actions absolute bottom-0 left-1/2 -translate-x-1/2 pb-14
                flex flex-col-reverse items-center gap-2 w-max z-10">
        @Buttons
    </div>
</div>

@code {
    [Parameter] public RenderFragment? Buttons { get; set; }
    [Parameter] public RenderFragment? MainIcon { get; set; }
    [Parameter] public string? MainAriaLabel { get; set; }
}