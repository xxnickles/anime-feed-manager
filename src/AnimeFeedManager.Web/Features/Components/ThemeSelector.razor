
<details class="dropdown dropdown-end"
         x-data="{
        selectedTheme: 'default',
        themes: {
            'default': { name: 'Default', icon: 'M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 12V5.25' },
            'dim': { name: 'Dark', icon: 'M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z' },
            'nord': { name: 'Light', icon: 'M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z' }
        },
        init() {
            if (!localStorage.getItem('user-theme')) {
                this.selectedTheme = 'default';
            } else {
                this.selectedTheme = localStorage.getItem('user-theme');
            }
        },
        updateTheme() {
            localStorage.setItem('user-theme', this.selectedTheme);
        },
        getSelectedIcon() {
            return this.themes[this.selectedTheme]?.icon || this.themes['default'].icon;
        },
        getSelectedName() {
            return this.themes[this.selectedTheme]?.name || this.themes['default'].name;
        }
    }">
    <summary role="button" 
             class="btn btn-md btn-circle" 
             :aria-label="'Theme selector, currently selected: ' + getSelectedName()"
             :title="'Change theme, current: ' + getSelectedName()">
        <!-- Dynamic icon based on selected theme -->
        <svg xmlns="http://www.w3.org/2000/svg" 
             fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
             class="size-6">
            <path stroke-linecap="round" 
                  stroke-linejoin="round" 
                  :d="getSelectedIcon()" />
        </svg>
    </summary>
    <ul class="menu dropdown-content bg-base-100 rounded-box z-1 w-60 p-2 shadow-lg">
        <li class="relative">
            <input
                type="radio"
                name="theme-dropdown"
                class="theme-controller btn btn-sm btn-block btn-ghost justify-start gap-3 opacity-0 absolute inset-0 z-10 cursor-pointer"
                aria-label="Default"
                value="default"
                x-model="selectedTheme"
                @change="updateTheme"/>
            <div class="btn btn-sm btn-block btn-ghost justify-start gap-3 pointer-events-none"
                 :class="{ 'btn-active': selectedTheme === 'default' }">
                <svg xmlns="http://www.w3.org/2000/svg" 
                     fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                     class="size-5 flex-shrink-0">
