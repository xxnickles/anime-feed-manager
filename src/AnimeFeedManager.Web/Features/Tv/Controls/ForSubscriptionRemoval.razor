@if (Model is not null)
{
    <ExpandableFab>
        <Buttons>
            <FabButtonContainer Label="Unsubscribe">
                <EditForm Model="@Model">
                    <input type="hidden" name="@nameof(Model.UserId)" value="@Model.UserId" />
                    <input type="hidden" name="@nameof(Model.SeriesId)" value="@Model.SeriesId" />
                    <input type="hidden" name="@nameof(Model.SeriesTitle)" value="@Model.SeriesTitle" />
                    <input type="hidden" name="@nameof(Model.LoaderSelector)" value="@Model.LoaderSelector" />
                    <input type="hidden" name="@nameof(Model.AdminView)" value="@(Model.AdminView.ToString())" />

                 
                    <button class="btn btn-sm btn-circle btn-error shadow-md"
                            aria-label="Unsubscribe @Model.SeriesTitle">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                             stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5m6 4.125 2.25 2.25m0 0 2.25 2.25M12 13.875l2.25-2.25M12 13.875l-2.25 2.25M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z"/>
                        </svg>

                    </button>
                </EditForm>
            </FabButtonContainer>
        </Buttons>
    </ExpandableFab>
}

@code {
    [Parameter, EditorRequired] public TvInterestedViewModel? Model { get; set; }
}