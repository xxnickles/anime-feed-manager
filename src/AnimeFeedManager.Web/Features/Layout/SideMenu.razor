<ul class="menu w-full grow bg-base-300" role="list"
    x-data="{ path: window.location.pathname }"
    x-on:htmx:pushed-into-history.window="path = window.location.pathname; if (window.innerWidth < 1024) document.getElementById('drawer').checked = false">
    <li>
        <NavLink href="/" Match="NavLinkMatch.All"
                 :class="{ 'active': path === '/' }"
                 class="is-drawer-close:tooltip is-drawer-close:tooltip-right"
                 data-tip="Home">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                 stroke="currentColor" class="size-5">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25"/>
            </svg>
            <span class="is-drawer-close:hidden">Home</span>
        </NavLink>
    </li>
    <li>
        <NavLink href="seasons" Match="NavLinkMatch.All"
                 :class="{ 'active': path.toLowerCase() === '/seasons' }"
                 class="is-drawer-close:tooltip is-drawer-close:tooltip-right"
                 data-tip="Seasons">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                 stroke="currentColor" class="size-5">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5"/>
            </svg>
            <span class="is-drawer-close:hidden">Seasons</span>
        </NavLink>
    </li>
    <AuthorizeView Roles="@UserRole.Admin()">
        <li>
            <NavLink href="admin"
                     :class="{ 'active': path.toLowerCase().startsWith('/admin') }"
                     class="is-drawer-close:tooltip is-drawer-close:tooltip-right"
                     data-tip="Admin">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 13.5V3.75m0 9.75a1.5 1.5 0 0 1 0 3m0-3a1.5 1.5 0 0 0 0 3m0 3.75V16.5m12-3V3.75m0 9.75a1.5 1.5 0 0 1 0 3m0-3a1.5 1.5 0 0 0 0 3m0 3.75V16.5m-6-9V3.75m0 3.75a1.5 1.5 0 0 1 0 3m0-3a1.5 1.5 0 0 0 0 3m0 9.75V10.5" />
                </svg>
                <span class="is-drawer-close:hidden">Admin</span>
            </NavLink>
        </li>
    </AuthorizeView>
    <AuthorizeView>
        <li>
            <NavLink href="user-feed-notifications"
                     :class="{ 'active': path.toLowerCase().startsWith('/user-feed-notifications') }"
                     class="is-drawer-close:tooltip is-drawer-close:tooltip-right"
                     data-tip="Notifications">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
                </svg>
                <span class="is-drawer-close:hidden">Notifications</span>
            </NavLink>
        </li>
    </AuthorizeView>
    <AuthorizeView>
        <NotAuthorized>
            <li>
                <NavLink href="login"
                         :class="{ 'active': path.toLowerCase() === '/login' }"
                         class="is-drawer-close:tooltip is-drawer-close:tooltip-right"
                         data-tip="Login">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="size-5">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z"/>
                    </svg>
                    <span class="is-drawer-close:hidden">Login</span>
                </NavLink>
            </li>
            <li>
                <NavLink href="register"
                         :class="{ 'active': path.toLowerCase() === '/register' }"
                         class="is-drawer-close:tooltip is-drawer-close:tooltip-right"
                         data-tip="Register">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0ZM3 19.235v-.11a6.375 6.375 0 0 1 12.75 0v.109A12.318 12.318 0 0 1 9.374 21c-2.331 0-4.512-.645-6.374-1.766Z" />
                    </svg>
                    <span class="is-drawer-close:hidden">Register</span>
                </NavLink>
            </li>
        </NotAuthorized>
        <Authorized>
            <li>
                <NavLink href="logout"
                         :class="{ 'active': path.toLowerCase() === '/logout' }"
                         class="is-drawer-close:tooltip is-drawer-close:tooltip-right"
                         data-tip="Logout">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="size-5">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15"/>
                    </svg>
                    <span class="is-drawer-close:hidden">Logout</span>
                </NavLink>
            </li>
        </Authorized>
    </AuthorizeView>
</ul>
