<details class="dropdown dropdown-end"
         x-data="{
        selectedTheme: 'default',
        init() {
            if (!localStorage.getItem('user-theme')) {
                this.selectedTheme = 'default';
            } else {
                this.selectedTheme = localStorage.getItem('user-theme');
            }
        },
        updateTheme() {
            localStorage.setItem('user-theme', this.selectedTheme);
        }
    }">
    <summary tabindex="0" role="button" class="btn btn-ghost m-1">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 md:hidden">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.098 19.902a3.75 3.75 0 0 0 5.304 0l6.401-6.402M6.75 21A3.75 3.75 0 0 1 3 17.25V4.125C3 3.504 3.504 3 4.125 3h5.25c.621 0 1.125.504 1.125 1.125v4.072M6.75 21a3.75 3.75 0 0 0 3.75-3.75V8.197M6.75 21h13.125c.621 0 1.125-.504 1.125-1.125v-5.25c0-.621-.504-1.125-1.125-1.125h-4.072M10.5 8.197l2.88-2.88c.438-.439 1.15-.439 1.59 0l3.712 3.713c.44.44.44 1.152 0 1.59l-2.879 2.88M6.75 17.25h.008v.008H6.75v-.008Z"/>
        </svg>
        <span class="hidden md:contents">
            Theme
            <svg
                width="12px"
                height="12px"
                class="h-2 w-2 fill-current opacity-60 inline-block"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 2048 2048">
                <path d="M1799 349l242 241-1017 1017L7 590l242-241 775 775 775-775z"></path>
            </svg>
        </span>

    </summary >
    <ul tabindex="0" class="dropdown-content bg-base-300 rounded-box z-1 w-52 p-2 shadow-2xl">
        <li>
            <input
                type="radio"
                name="theme-dropdown"
                class="theme-controller btn btn-sm btn-block btn-ghost justify-start"
                aria-label="Default"
                value="default"
                x-model="selectedTheme"
                @change="updateTheme"/>
        </li>
        <li>
            <input
                type="radio"
                name="theme-dropdown"
                class="theme-controller btn btn-sm btn-block btn-ghost justify-start"
                aria-label="Dark"
                value="dim"
                x-model="selectedTheme"
                @change="updateTheme"/>
        </li>
        <li>
            <input
                type="radio"
                name="theme-dropdown"
                class="theme-controller btn btn-sm btn-block btn-ghost justify-start"
                aria-label="Light"
                value="nord"
                x-model="selectedTheme"
                @change="updateTheme"/>
        </li>
    </ul>
</details >