@using AnimeFeedManager.Old.Common
@using AnimeFeedManager.Old.Common.Types
<NavLink class="@CssClass()" href="@GetLink(Season, Year, SeriesType.Tv)">Tv</NavLink> |
<NavLink class="@CssClass()" href="@GetLink(Season, Year, SeriesType.Ova)">Ovas</NavLink> |
<NavLink class="@CssClass()" href="@GetLink(Season, Year, SeriesType.Movie)">Movies</NavLink>


@code {
    [Parameter] public Season Season { get; set; } = Season.Winter;
    [Parameter] public Year Year { get; set; } = Year.FromNumber(2001);
    [Parameter] public bool IsLatest { get; set; }

    private static string GetLink(Season season, Year year, SeriesType seriesType) => $"{season}-{year}/{seriesType.AsPlural()}";

    private string CssClass() => !IsLatest ? "link hover:link-primary" : "link link-secondary hover:link-primary";
}